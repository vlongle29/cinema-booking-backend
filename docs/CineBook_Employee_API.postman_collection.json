              "host": ["{{baseUrl}}"],
              "path": ["api", "employee", "{{employeeUserId}}"]
            }
          }
        },
        {
          "name": "Update Employee Salary",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"salary\": 9500000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/employee/{{employeeUserId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "employee", "{{employeeUserId}}"]
            }
          }
        },
        {
          "name": "Update Employee Position",
          "request": {
            "method": "PUT",
            "header": [
              {
