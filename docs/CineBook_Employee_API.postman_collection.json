        {
          "name": "Search Employees by Branch",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/employee/search?branchId={{branchId}}&page=0&size=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "employee", "search"],
              "query": [
                {
                  "key": "branchId",
                  "value": "{{branchId}}"
                },
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Search Employees by Position",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/employee/search?position=CASHIER&page=0&size=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "employee", "search"],
              "query": [
                {
                  "key": "position",
                  "value": "CASHIER"
                },
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "10"
                }
              ]
            }
          }
        },
